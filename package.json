{
  "name": "mud",
  "version": "0.0.0",
  "description": "Mud is the fabric of autonomous worlds",
  "repository": {
    "type": "git",
    "url": "https://github.com/latticexyz/mud.git"
  },
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@parcel/optimizer-data-url": "2.8.3",
    "@parcel/packager-ts": "2.8.3",
    "@parcel/transformer-inline-string": "2.8.3",
    "@parcel/transformer-typescript-types": "2.8.3",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "chalk": "^5.2.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^8.15.0",
    "husky": ">=6",
    "jq-cli-wrapper": "^1.6.1",
    "lerna": "^4.0.0",
    "lint-staged": ">=10",
    "prettier": "^2.8.4",
    "prettier-plugin-solidity": "^1.1.2",
    "retypeapp": "^2.4.0",
    "rimraf": "^3.0.2",
    "run-pty": "^3.0.0",
    "shelljs": "^0.8.5",
    "typescript": "^4.9.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install && (forge --version || pnpm foundryup) && pnpm -r prepare",
    "commit": "cz",
    "prettier:check": "prettier --check 'packages/**/*.ts'",
    "prettier": "prettier --write 'packages/**/*.ts'",
    "lint": "eslint . --ext .ts",
    "release": "pnpm && lerna publish --no-private --force-publish && pnpm retype:updateversion",
    "release:manual": "node scripts/workspaceRun.mjs release",
    "release:yalc": "(pnpm entry:dist && pnpm lerna exec npx yalc push); pnpm entry:src",
    "foundryup": "curl -L https://foundry.paradigm.xyz | bash && bash ~/.foundry/bin/foundryup",
    "link:packages": "pnpm lerna run link",
    "docs": "pnpm docs:prepare && pnpm retype build",
    "docs:prepare": "pnpm lerna run docs && pnpm retype:updateversion",
    "docs:dev": "pnpm retype watch .",
    "retype:updateversion": "sed \"s/label: .*/label: $(pnpm list --pattern @latticexyz/solecs | grep -e @latticexyz | sed \"s/.*@//\")/\" retype.yml > retype.yml.tmp && mv retype.yml.tmp retype.yml",
    "test": "pnpm workspaces run test",
    "entry:dist": "pnpm lerna run prepack",
    "entry:src": "pnpm lerna run postpack",
    "gas-report": "pnpm workspace @latticexyz/store run gas-report && pnpm workspace @latticexyz/world run gas-report",
    "tablegen": "pnpm workspace @latticexyz/store run tablegen && pnpm workspace @latticexyz/world run tablegen"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "*.{ts,css,md,sol}": "prettier --write"
  }
}
